<!-- Points -->
<section class="scoreboard">
    <table>
        <thead>
            <tr>
                <th>Pass</th>
                <th>Turn</th>
                <th>O/D</th>
                <th colspan="3">Score</th>
                <th>O/D</th>
                <th>Turn</th>
                <th>Pass</th>
            </tr>
        </thead>
        <tbody>
            <% parsedStats.scoredPoints.forEach(scoreStat => { %>

                <% let {scored, team1Name, team1OorD, team1Passes, team1Turnovers, team1Score, team2Score, team2Name, team2OorD, team2Turnovers, team2Passes} = scoreStat %>

                <tr>
                    <%# Check if team 1 scored and adjust table colors %>
                    <% if (scored === team1Name) { %>
                        <%# If team 1 was on offense during scored point -> hold, which means dark green color %>
                        <% if (team1OorD === "O") { %>
                            <td class="hold"><%- team1Passes %></td>
                            <td class="hold"><%- team1Turnovers %></td>
                            <td class="hold"><%- team1OorD %></td>
                        <% } else { %>
                        <%# If team 1 was on defence during scored point -> break, which means green color %>
                            <td class="break"><%- team1Passes %></td>
                            <td class="break"><%- team1Turnovers %></td>
                            <td class="break"><%- team1OorD %></td>
                        <% } %>
                    <% } else { %>
                        <%# If team 1 was scored on during defence -> conceded, which means dark red color %>
                        <% if (team1OorD === "D") { %>
                            <td class="conceded"><%- team1Passes %></td>
                            <td class="conceded"><%- team1Turnovers %></td>
                            <td class="conceded"><%- team1OorD %></td>
                        <% } else { %>
                        <%# If team 1 was scored on during offense -> broken, which means red color %>
                            <td class="broken"><%- team1Passes %></td>
                            <td class="broken"><%- team1Turnovers %></td>
                            <td class="broken"><%- team1OorD %></td>
                        <% } %>
                    <% } %>
                    
                    <td class="table-score"><%- team1Score %></td>
                    <td class="table-score">-</td>
                    <td class="table-score"><%- team2Score %></td>

                    <%# Check if team 2 scored and adjust table colors %>
                    <% if (scored === team2Name) { %>
                        <%# If team 2 was on offense during scored point -> hold, which means dark green color %>
                        <% if (team2OorD === "O") { %>
                            <td class="hold"><%- team2OorD %></td>
                            <td class="hold"><%- team2Turnovers %></td>
                            <td class="hold"><%- team2Passes %></td>
                            
                        <% } else { %>
                        <%# If team 2 was on defence during scored point -> break, which means green color %>
                        <td class="break"><%- team2OorD %></td>
                        <td class="break"><%- team2Turnovers %></td>
                        <td class="break"><%- team2Passes %></td>
                        <% } %>
                    <% } else { %>
                        <%# If team 2 was scored on during defence -> conceded, which means dark red color %>
                        <% if (team2OorD === "D") { %>
                            <td class="conceded"><%- team2OorD %></td>
                            <td class="conceded"><%- team2Turnovers %></td>
                            <td class="conceded"><%- team2Passes %></td>
                        <% } else { %>
                        <%# If team 2 was scored on during offense -> broken, which means red color %>
                        <td class="broken"><%- team2OorD %></td>
                        <td class="broken"><%- team2Turnovers %></td>
                        <td class="broken"><%- team2Passes %></td>
                        <% } %>
                    <% } %>
                </tr>
            <% }) %>
        </tbody>
    </table>
</section>